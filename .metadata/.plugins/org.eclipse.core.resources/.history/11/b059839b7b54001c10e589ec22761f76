package com.greycampus.dao;

import javax.sql.DataSource;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.support.JdbcDaoSupport;
import org.springframework.stereotype.Repository;

import com.greycampus.entity.Customer;

@Repository
public class CustomerDAO extends JdbcDaoSupport {

	@Autowired
	public CustomerDAO(DataSource dataSource) {
		this.setDataSource(dataSource);
	}

	public int insert(Customer customer) {
		String sql = "insert into customer values(?,?,?,?,?,?,?)";
		return getJdbcTemplate().update(sql, customer.getEno(),customer.getName(), customer.getPhone(), customer.getType(),
				customer.getStreet(), customer.getCountry(), customer.getCity());
	}

}
